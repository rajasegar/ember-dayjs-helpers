{
  "name": "ember-dayjs-helpers",
  "version": "0.5.2",
  "description": "Ember Template helpers based on Day.js",
  "keywords": [
    "ember-addon",
    "dayjs",
    "helpers",
    "date",
    "time",
    "day.js",
    "parse",
    "format"
  ],
  "repository": "https://github.com/rajasegar/ember-dayjs-helpers",
  "license": "MIT",
  "author": "Rajasegar Chandran <rajasegar.c@gmail.com>",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*",
    "lint:hbs": "ember-template-lint .",
    "lint:js": "eslint .",
    "start": "ember serve",
    "test": "npm-run-all lint:* test:*",
    "test:ember": "COVERAGE=true ember test",
    "test:ember-compatibility": "ember try:each",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "dayjs": "1.10.7",
    "ember-auto-import": "1.12.0",
    "ember-cli-babel": "7.26.6",
    "ember-cli-htmlbars": "5.7.1"
  },
  "devDependencies": {
    "@ember/optional-features": "2.0.0",
    "@glimmer/component": "1.0.4",
    "@glimmer/tracking": "1.0.4",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "babel-eslint": "10.1.0",
    "broccoli-asset-rev": "3.0.0",
    "coveralls": "3.1.1",
    "ember-cli": "3.28.4",
    "ember-cli-code-coverage": "2.0.0-beta.2",
    "ember-cli-dependency-checker": "3.2.0",
    "ember-cli-inject-live-reload": "2.1.0",
    "ember-cli-sri": "2.1.1",
    "ember-cli-uglify": "3.0.0",
    "ember-disable-prototype-extensions": "1.1.3",
    "ember-export-application-global": "2.0.1",
    "ember-load-initializers": "2.1.2",
    "ember-maybe-import-regenerator": "1.0.0",
    "ember-qunit": "4.6.0",
    "ember-resolver": "8.0.3",
    "ember-source": "3.28.6",
    "ember-source-channel-url": "3.0.0",
    "ember-template-lint": "3.13.0",
    "ember-try": "1.4.0",
    "eslint": "8.2.0",
    "eslint-plugin-ember": "10.5.7",
    "eslint-plugin-node": "11.1.0",
    "loader.js": "4.7.0",
    "npm-run-all": "4.1.5",
    "qunit-dom": "2.0.0",
    "semantic-release": "18.0.0",
    "webpack": "5.64.1"
  },
  "engines": {
    "node": "10.* || >= 12"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "release(version): Release ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
